@model Eventures.Models.CreateEventViewModel

@{
    ViewData["Title"] = "Create";
}

<h1 class="text-center">Create Event</h1>


<div class="row">
    <div class="center-block w-60 text-center">
        <hr class="hr-event" />
        <form asp-action="Create">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group col-sm-6">
                <label asp-for="Name" class="control-label text-center"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group col-sm-6">
                <label asp-for="Place" class="control-label text-center"></label>
                <input asp-for="Place" class="form-control" />
                <span asp-validation-for="Place" class="text-danger"></span>
            </div>

            <hr class="hr-event" />

            <div class="form-group col-sm-6">
                <label asp-for="Start" class="control-label"></label>
                <input asp-for="Start" class="form-control" />
                <span asp-validation-for="Start" class="text-danger"></span>
            </div>
            <div class="form-group col-sm-6">
                <label asp-for="End" class="control-label"></label>
                <input asp-for="End" class="form-control" />
                <span asp-validation-for="End" class="text-danger"></span>
            </div>

            <hr class="hr-event" />

            <div class="form-group col-sm-6">
                <label asp-for="TotalTickets" class="control-label"></label>
                <input asp-for="TotalTickets" class="form-control" />
                <span asp-validation-for="TotalTickets" class="text-danger"></span>
            </div>
            <div class="form-group col-sm-6">
                <label asp-for="PricePerTicket" class="control-label"></label>
                <input asp-for="PricePerTicket" class="form-control" />
                <span asp-validation-for="PricePerTicket" class="text-danger"></span>
            </div>

            <hr class="hr-event" />

            <div class="form-group">
                <input type="submit" value="Create Event" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

