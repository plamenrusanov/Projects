@model IEnumerable<Eventures.Models.EventViewModel>

@{
    ViewData["Title"] = "AllEvents";
    int i = 1;

}

<h1 class="text-center">All Events</h1>
<hr class="hr-event" />
<table class="table">
    <thead>
        <tr class="row">
            <th class="col-sm-1">
                #
            </th>
            <th class="col-sm-2">
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th class="col-sm-2">
                @Html.DisplayNameFor(model => model.Start)
            </th>
            <th class="col-sm-2">
                @Html.DisplayNameFor(model => model.End)
            </th>
            <th class="col-sm-2">
                @Html.DisplayNameFor(model => model.Place)
            </th>
            <th class="col-sm-3">
                @Html.DisplayName("Actions")
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr class="row">
                <td class="col-sm-1">
                    @(i++)
                </td>
                <td class="col-sm-2">
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td class="col-sm-2">
                    @Html.DisplayFor(modelItem => item.Start)
                </td>
                <td class="col-sm-2">
                    @Html.DisplayFor(modelItem => item.End)
                </td>
                <td class="col-sm-2">
                    @Html.DisplayFor(modelItem => item.Place)
                </td>
                <td class="col-sm-3">
                    @if (this.User.IsInRole("Admin"))
                    {
                        <partial name="_AdminActionEventPartial" model="@item.Id" />
                    }
                    else
                    {
                        <partial name="_UserActionEventPartial" model="@new BuyTicketViewModel { EventId = item.Id}"/>
                    }

                </td>
            </tr>
        }
    </tbody>
</table>
<hr class="hr-event" />
