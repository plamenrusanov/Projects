@model MyEventViewModel

<div class="row eventContainer">
    <div class="col-sm-3">
        @if (Model.ImageUrl == null)
        {
            <img src='https://res.cloudinary.com/duxtyuzpy/image/upload/v1545821573/sample.jpg' width="150" height="120" />
        }
        else
        {
            <img src='https://res.cloudinary.com@(Model.ImageUrl)' width="100" height="150" />
        }
    </div>
    <div class="col-sm-3 text-center">
        @Html.DisplayFor(modelItem => Model.Name)
        <hr class="hr-event"/>
        @Html.DisplayFor(modelItem => Model.Place)
    </div>
    <div class="col-sm-3 text-center">
        @Html.DisplayFor(modelItem => Model.Start.DayOfWeek)
        <hr class="hr-event" />
        @Html.DisplayFor(modelItem => Model.Start)
    </div> 
    <div class="col-sm-3 text-center">
        @Html.LabelFor(m => m.AdultQuantity)
        @Html.DisplayFor(m => m.AdultQuantity)
        <hr class="hr-event" />
        @Html.LabelFor(m => m.ChildQuantity)
        @Html.DisplayFor(m => m.ChildQuantity)
    </div> 
</div>